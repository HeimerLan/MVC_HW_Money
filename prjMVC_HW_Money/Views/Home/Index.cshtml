@Html.Partial("_MoneyTemplate", Model)


<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.No</td>
                    <td>@item.Type</td>
                    <td>@item.Date</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
    </div>
</div>
